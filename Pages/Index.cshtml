@page
@model DSEDRazor.Pages.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Home page";
}

<div>
    <h2>Customers</h2>
    <form method="post">
        <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
            <thead>
                <tr>
                    <th class="mdl-data-table__cell--non-numeric">First Name</th>
                    <th class="mdl-data-table__cell--non-numeric">Last Name</th>
                    <th class="mdl-data-table__cell--non-numeric">Address</th>
                    <th>Phone Num.</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model.Customers)
                {
                    <tr>
                        <td class="mdl-data-table__cell--non-numeric">@customer.FirstName</td>
                        <td class="mdl-data-table__cell--non-numeric">@customer.LastName</td>
                        <td class="mdl-data-table__cell--non-numeric">@customer.Address</td>
                        <td class="mdl-data-table__cell--non-numeric">@customer.PhoneNumber</td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
</div>
