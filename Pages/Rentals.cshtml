@page
@model DSEDRazor.Pages.RentalsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Home page";
}

<div>
    <h2>Customers <a asp-page="./AddCustomer" class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab mdl-button--accent mdl-js-ripple-effect material-icons"><i class="material-icons">add</i></a></h2>
        <table class="mdl-data-table mdl-js-data-table mdl-shadow--4dp">
            <thead>
                <tr>
                    <th class="mdl-data-table__cell--non-numeric">First Name</th>
                    <th class="mdl-data-table__cell--non-numeric"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rental in Model.RentedMovies)
                {
                    <tr>
                        <td class="mdl-data-table__cell--non-numeric"><p>@rental.Movie.Title - @rental.Customer.LastName, @rental.Customer.FirstName</p></td>
                        <td class="mdl-data-table__cell--non-numeric">
                            <button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect material-icons">edit</button>
                            <button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect material-icons">delete</button>
                            </td>

                    </tr>
                }
            </tbody>
        </table>
</div>
